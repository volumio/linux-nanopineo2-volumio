#include "sun8i-h3-nanopi.dtsi"

/ {
	model = "FriendlyElec NanoPi-NEO-Air";
	compatible = "friendlyarm,nanopi-neo-air", "allwinner,sun8i-h3";

    wifi_pwrseq: wifi_pwrseq {
        compatible = "mmc-pwrseq-simple";
        pinctrl-names = "default";
        pinctrl-0 = <&wifi_en_npi>;
        reset-gpios = <&r_pio 0 7 GPIO_ACTIVE_LOW>; /* PL7 */
        post-power-on-delay-ms = <200>;
    };
    rfkill_bt {
        compatible = "rfkill-gpio";
        pinctrl-names = "default";
        pinctrl-0 = <&bt_pwr_pin>;
        reset-gpios = <&pio 6 13 GPIO_ACTIVE_HIGH>; /* PG13 */
        clocks = <&osc32k>;
        clock-frequency = <32768>;
        rfkill-name = "sunxi-bt";
        rfkill-type = "bluetooth";
    };
};

&pio {
    bt_pwr_pin: bt_pwr_pin@0 {
        pins = "PG13";
        function = "gpio_out";
    };
    spi0_cs_pins: spi0_cs_pins {
        pins = "PC3";
        function = "gpio_out";
    };
	i2sclk_pins: i2sclk_pins {
		pins = "PA6", "PG6", "PG7";
		function = "gpio_out";
	};
};

&r_pio {
    wifi_en_npi: wifi_en_pin {
        pins = "PL7";
        function = "gpio_out";
    };
};

&mmc1 {
	pinctrl-names = "default";
	pinctrl-0 = <&mmc1_pins_a>;
	vmmc-supply = <&reg_vcc3v3>;
	vqmmc-supply = <&reg_vcc3v3>;
	mmc-pwrseq = <&wifi_pwrseq>;
	bus-width = <4>;
	non-removable;
	status = "okay";

	brcmf: bcrmf@1 {
		reg = <1>;
		compatible = "brcm,bcm4329-fmac";
		interrupt-parent = <&pio>;
		interrupts = <6 10 IRQ_TYPE_LEVEL_LOW>; /* PG10 / EINT10 */
		interrupt-names = "host-wake";
	};
};

&mmc2 {
    pinctrl-names = "default";
    pinctrl-0 = <&mmc2_8bit_pins>;
    vmmc-supply = <&reg_vcc3v3>;
    bus-width = <8>;
    non-removable;
    cap-mmc-hw-reset;
    status = "okay";
};

&mmc2_8bit_pins {
    /* Increase drive strength for DDR modes */
    drive-strength = <40>;
    /* eMMC is missing pull-ups */
    bias-pull-up;
};

&i2c0 {
    status = "okay";
};

&i2c1 {
    /* no I2C1 for I2S0 */
    status = "disabled";
};

&i2c2 {
    status = "okay";
};

&uart3 {
    pinctrl-names = "default";
    pinctrl-0 = <&uart3_pins>, <&uart3_rts_cts_pins>;
    status = "okay";
};

&uart1 {
	status = "disabled";
};

&pcm5102a {
    status = "okay";
};

&i2s0 {
    sound-dai = <&pcm5102a>;
    clock-source = "external";
 	pinctrl-0 = <&i2s0_pins &i2sclk_pins>;
    clk-gpios = <&pio 0 6 GPIO_ACTIVE_LOW>, <&pio 6 6 GPIO_ACTIVE_LOW>, <&pio 6 7 GPIO_ACTIVE_LOW>;
 	status = "okay";
};
